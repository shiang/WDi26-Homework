
<h2>EDIT Art style</h2>
<form method="post" action="/art/<%= @artstyle['id'] %>" >
  <label>Art Type:</label>
  <input type="text" name="art_type" placeholder = "Modern" value = "<%= @artstyle['art_type'] %>">
  <label>Art Description:</label>
  <input type="text" name="art_defi" placeholder = "tension and high drama in their composition." value = "<%= @artstyle['art_defi'] %>">
  <label>Famous Artist:</label>
  <input type="text" name="fam_artist" placeholder = "Mark Tobey" value = "<%= @artstyle['fam_artist'] %>">
  <label>Image:</label>
  <input type="url" name="art_image" placeholder = "http://..." value = "<%= @artstyle['art_image'] %>"><br><br>

  <button>EDIT Art Style</button>

</form>
