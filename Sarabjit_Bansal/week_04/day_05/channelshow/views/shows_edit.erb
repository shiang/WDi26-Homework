<h2>EDIT SHOW</h2>
<form action="/shows/<%= @show['id'] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" placeholder="MKR" value = "<%= @show['name'] %>" >
  <label>Type:</label>
  <input type="text" name="showtype" placeholder="Drama" value = "<%= @show['showtype'] %>">

  <label>Image:</label>
  <input type="text" name="image" placeholder="http://....." value = "<%= @show['image'] %>">
  <label>Channel Name</label>

  <select name="channel_id">
    <option></option>
    <% Channel.all.each do |channel| %>
      <option value= "<%= channel.id %>" <%= "selected" if channel.id == @show.channel_id  %>
      ><%= channel.name %></option>
    <% end %>
  </select>

  <button>Edit Show</button
</form>
