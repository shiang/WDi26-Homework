<h2>New Mountain</h2>
<form action="/mountains" method="post">
  <label>Name:</label>
  <input type="text" name="mountain[name]" placeholder="k2">

  <label>Image:</label>
  <input type="url" name="mountain[image]" placeholder="http://...">

  <label>Height:</label>
  <input type="number" name="mountain[height]" placeholder="5000">

  <label>Country:</label>
  <input type="text" name="mountain[country]" placeholder="Nepal">

  <label>Volcano:</label>
  <input type="text" name="mountain[volcano]" placeholder="Yes/No">

  <label>Continent:</label>
  <input type="text" name="mountain[continent]" placeholder="Asia">

  <button>Create mountain</button>
</form>
