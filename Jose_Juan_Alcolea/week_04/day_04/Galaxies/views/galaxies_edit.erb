<h2>Edit galaxy</h2>

<form method="post" action="/galaxies/<%= @galaxies['id'] %>">
  <label>Name:</label>
  <input type="text" name="name" placeholder="Galaxy name" value="<%= @galaxies['name'] %>">
  <label>Type:</label>
  <input type="text" name="type" placeholder="Galaxy type" value="<%= @galaxies['type'] %>">
  <label>Image:</label>
  <input type="url" name="image" placeholder="http://..." value="<%= @galaxies['image'] %>">

  <button>Update Galaxy</button>
</form>
