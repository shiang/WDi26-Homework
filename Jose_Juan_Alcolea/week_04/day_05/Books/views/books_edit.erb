<h2>Edit Book</h2>

<form method="post" action="/books/<%= @book['id'] %>">
  <label>Name:</label>
  <input type="text" name="name" placeholder="Book name" value="<%= @book['name'] %>">
  <label>Genre:</label>
  <input type="text" name="genre" placeholder="Book genre" value="<%= @book['family'] %>">
  <label>Cover:</label>
  <input type="url" name="image" placeholder="http://..." value="<%= @book['image'] %>">


    <label>Author:</label>
    <select name="author_id">
      <option></option>
      <% Author.all.each do |author| %>
        <option value="<%= author.id %>" <%= "selected" if author.id == @book.author_id %> ><%= book.name %></option>
      <% end %>
    </select>



  <button>Update book</button>
</form>
