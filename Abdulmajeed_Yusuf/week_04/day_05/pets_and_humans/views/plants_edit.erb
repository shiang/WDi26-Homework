<h2>Edit Plant</h2>

<form method="post" action="/plants/<%= @plant.id %>"> <!-- a url can have the different verbs -->
  <label>Name: </label>
  <input type="text" name="name" placeholder="Plant name" value="<%= @plant.name %>">
  <label>Image: </label>
  <input type="url" name="image" placeholder="hhtp://..." value="<%= @plant.image %>">

  <button>Update plant</button>
</form>
