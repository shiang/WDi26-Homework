<h2>Edit Butterfly</h2>

<form method="post" action="/butterflies/<%= @butterfly['id'] %>"> <!-- a url can have the different verbs -->
  <label>Name: </label>
  <input type="text" name="name" placeholder="Butterfly name" value="<%= @butterfly['name'] %>">
  <label>Family: </label>
  <input type="text" name="family" placeholder="Butterfly family" value="<%= @butterfly['family'] %>">
  <label>Image: </label>
  <input type="url" name="image" placeholder="hhtp://..." value="<%= @butterfly['image'] %>">

  <label>Larval plant: </label>
  <select name="plant_id">
    <option></option>
    <% PLant.all.each do |plant| %>
      <option value="<%= plant.id %>" <% "selected" if plant.id == @butterfly.plant_id %> ><%= plant.name %></option>
    <% end %>
  <button>Update butterfly</button>
</form>
