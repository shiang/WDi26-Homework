<h2>Edit artist</h2>

<form action="/artists/<%= @artist.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @artist.name %>" placeholder="e.g. Gustav Klimt"><br>
  <label>Year of birth:</label>
  <input type="integer" name="year_of_birth" value="<%= @artist.year_of_birth %>" placeholder="1862"><br>
  <label>Nationality:</label>
  <input type="text" name="nationality" value="<%= @artist.nationality %>" placeholder="e.g. Austrian"><br>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @artist.image %>"  placeholder="http://..."><br>
  <button>Update</button>
</form>
