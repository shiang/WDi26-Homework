<h2>Change Flower</h2>
<form method = "post" action = "/flowers/<%=@flower['id']%>">
<label>Name:</label>
<input type ="text" name ="name" value ="<%=@flower['name'] %>">
<label>Family:</label>
<input type ="text" name ="family" value ="<%=@flower['family'] %>">
<label>Image:</label>
<input type = "url" name ="image" value ="<%=@flower['image'] %>">
<button>Update Flower</button>
</form>
