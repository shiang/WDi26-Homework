<% unless @flower['image'].nil? || @flower['image'].empty? %>
<img class ="feature" src ="<%= @flower['image']%>" alt ="<%= @flower['name']%>">
<%end%>

<div class = "controls">
<a href = "/flowers/<%= @flower['id']%>/edit">Edit</a>
