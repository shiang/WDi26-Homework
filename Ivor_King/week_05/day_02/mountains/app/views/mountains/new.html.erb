<h2>New Mountain</h2>
<form action="/mountains" method="post">
  <label>Name:</label>
  <input type="text" name="mountain[name]" placeholder="e.g. Mt Ridonkulous">

  <label>Height:</label>
  <input type="float" name="mountain[height]" placeholder="e.g. 2.45 (in km)...">

  <label>Country:</label>
  <input type="number" name="mountain[country]" placeholder="e.g. Fiji">

  <label>Climbed:</label>
  <input type="number" name="mountain[climbed]" placeholder="e.g. 20 (times)">

  <label>Image:</label>
  <input type="URL" name="mountain[image]" placeholder="e.g. http://...">

  <button>Create mountain</button>
</form>
