<h2>Edit Mountain</h2>
<form action="/mountains/<%= @mountain.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="mountain[name]" placeholder="e.g. Mt Ridonkulous" value="<%= @mountain.name %>">

  <label>Height:</label>
  <input type="float" name="mountain[height]" placeholder="e.g. 2.45 (in km)..." value="<%= @mountain.height %>">

  <label>Country:</label>
  <input type="text" name="mountain[country]" placeholder="e.g. Fiji" value="<%= @mountain.country %>">

  <label>Climbed:</label>
  <input type="number" name="mountain[climbed]" placeholder="e.g. 20 (times)" value="<%= @mountain.climbed %>">

  <label>Image:</label>
  <input type="url" name="mountain[image]" placeholder="e.g. http://..." value="<%= @mountain.image %>">

  <button>Update mountain</button>
</form>