<h2>Add Cheese</h2>

<form method="post" action="/cheeses">
    <label for="">Name:</label>
    <input type="text" name="name" placeholder="Cheese name">

    <label for="">Age:</label>
    <input type="text" name="age" placeholder="age">

    <label for="">Firmness:</label>
    <input type="text" name="firmness" placeholder="firmness">

    <label for="">Origin:</label>
    <input type="text" name="origin" placeholder="eg: Italy">

    <label for="">Image:</label>
    <input type="url" name="image" placeholder="http://(image url)">

    <label>Wine Pairing:</label>

    <select name="wine_id">
        <option></option>

        <% Wine.all.each do |wine| %>

            <option value="<%= wine.id %>"><%= wine.variety %></option>
        <% end %>
    </select>

    <button>Add Cheese</button>
</form>