<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>

  <%= f.label :year, 'Year' %>
  <%= f.text_field :year %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.label :director_id %>
  <%= f.select :director_id, Director.pluck(:name, :id), :include_blank => true %>

  <%= f.submit %>
<% end %>
